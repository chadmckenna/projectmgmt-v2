<article id="<%= dom_id project %>">
  <h2>
    <%= project.client.name %> /
    <%= project.name %>
  </h2>

  <p>
    <strong>Description:</strong>
    <%= project.description %>
  </p>

  <p>
    <strong>Todos</strong>
    <div>
      <%= render 'todos/todos', todos: project.todos, todoable: project %>
    </div>
  </p>

</article>
